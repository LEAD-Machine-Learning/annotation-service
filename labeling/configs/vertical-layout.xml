<View>
  <View style="width: 150px; padding: 0 1em; margin-right: 0.5em; background: #f1f1f1; border-radius: 3px">
  <RectangleLabels name="label" toName="image">
    <Label value="header" background="blue"></Label>
    <Label value="text" background="green"></Label>
    <Label value="variable" background="red"></Label>
  </RectangleLabels>
  </View>

  <View style="width: 500px">
    <Image name="image" value="$image"
        zoom="true" zoomControl="true" 
        negativeZoom="true" rotateControl="true"
        width="60%">
    </Image>
  </View>
</View>